{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="main-review_slider rich-text__wrapper--{{ section.settings.desktop_content_position }} {% if section.settings.full_width %} slider-component-full-width{% endif %}">
    <div class="testimonials-wrapper">
        <h2 class="tesimonials-title">{{ section.settings.review_title }}</h2>
    </div>
    <div class="review-slider">
        {%- for block in section.blocks -%}
            <div class="review">
                <div class="review_content"> {{ block.settings.review_content }} </div>
            </div>
        {%- endfor -%} 
        <!-- Add more review items as needed -->
    </div>            
</div>

<script>
    $(document).ready(function(){
      $('.review-slider').slick({
        slidesToShow: 1, // Number of slides to show at a time
        slidesToScroll: 1, // Number of slides to scroll
        autoplay: true, // Auto-play the slider
        autoplaySpeed: 5000, // Delay between slides in milliseconds (5 seconds in this example)
      });
    });
</script>
{% schema %}
{
    "name": "Review Slider",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Make a section full width",
            "default": false
        },
        {
            "type": "select",
            "id": "desktop_content_position",
            "options": [
              {
                "value": "left",
                "label": "t:sections.rich-text.settings.desktop_content_position.options__1.label"
              },
              {
                "value": "center",
                "label": "t:sections.rich-text.settings.desktop_content_position.options__2.label"
              },
              {
                "value": "right",
                "label": "t:sections.rich-text.settings.desktop_content_position.options__3.label"
              }
            ],
            "default": "center",
            "label": "t:sections.rich-text.settings.desktop_content_position.label",
            "info": "t:sections.rich-text.settings.desktop_content_position.info"
        },
        {
            "type": "text",
            "id": "review_title",
            "label": "Review Title",
            "default": "What customers are saying"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "block",
            "settings": [
                {
                    "type": "richtext",
                    "id": "review_content",
                    "label": "Review content"
                }
            ]
        }
    ],
    "presets": [
        {
          "name": "Review Slider"
        }
      ]
} 
{% endschema %}